    <!-- Tema sem ActionBar -->
    <style name="Theme.WatchApp.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Personalize os atributos do tema -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
    </style>
</resources>
